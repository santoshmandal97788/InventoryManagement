
@{
    ViewData["Title"] = "404 Not Found";
   
}
@section bredCrum{
     <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">404 Error Page</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="">Error</a></li>
              <li class="breadcrumb-item active">404 NotFound</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
}

    <!-- Main content -->
    <section class="content">
      <div class="error-page">
        <h2 class="headline text-warning"> 404</h2>

        <div class="error-content">
          <h3><i class="fas fa-exclamation-triangle text-warning"></i> Oops! Page not found.</h3>
           <p>
           @ViewBag.Path
          </p>
           <p>
           @ViewBag.QS
          </p>
          <p>
           @ViewBag.ErrorMessage
          </p>
          <a href="@Url.Action("Index","Dashboard")" class="btn btn-outline-primary">Go to Dashboard</a>
          
        </div>
        <!-- /.error-content -->
      </div>
      <!-- /.error-page -->
    </section>
    <!-- /.content -->
