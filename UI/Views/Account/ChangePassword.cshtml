@model UI.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    //var msg = TempData["message"];
    //TempData.Keep("message");
}


 <div class="row  justify-content-center">
     <div class="col-md-10">
              <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Change Password Form</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-action="ChangePassword" asp-controller="Account">
                <div class="card-body">
                   
                       <div class="form-group">
                            <label class="control-label">Current Password</label>
                             <input asp-for="CurrentPassword" type="password" class="form-control"  placeholder="Enter Current Password">
                            <span asp-validation-for="CurrentPassword" class="text-danger">@ViewBag.Error</span>
                        </div> 

                      
                         <div class="form-group">
                            <label class="control-label">New Password</label>
                             <input asp-for="NewPassword" type="password" class="form-control"  placeholder="Enter New Password">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                  
                    
                          <div class="form-group">
                            <label class="control-label">Confirm New Password</label>
                             <input asp-for="ConfirmPassword" type="password" class="form-control"  placeholder="Re-Type new Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>  
                     

                   

                      
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <span>@TempData["message"]</span>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
    </div>

</div>