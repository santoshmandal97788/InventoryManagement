@model UI.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

 
   <div class="card-body">
      <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>
      <form asp-action="ResetPassword" asp-controller="Account" method="post">
        <div class="input-group mb-3">
          <input  asp-for="NewPassword"   type="password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <span asp-validation-for="NewPassword" class="text-danger"></span>

        <div class="input-group mb-3">
          <input asp-for="ConfirmPassword"  type="password" class="form-control" placeholder="Confirm Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
       <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <span class="text-danger">@ViewBag.Error</span>
        <div class="row">
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Change password</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <p class="mt-3 mb-1">
        <a href="@Url.Action("Login","Account")">Login</a>
      </p>
    </div>

