              <div class="card-header">
                <h3 class="card-title">ListItem List</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="listItemDataTable" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                     <th>List Item Id</th>
